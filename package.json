{
  "name": "logux.io",
  "private": true,
  "scripts": {
    "secrets:decrypt": "gcloud kms --project logux-255417 decrypt --plaintext-file=secrets.json --ciphertext-file=secrets.json.enc --location=global --keyring=secrets --key=password",
    "securitytxt:sign": "gpg --digest-algo SHA512 --clearsign src/well-known/security.txt",
    "start:uikit": "parcel serve src/uikit.pug --open",
    "lint": "eslint . scripts/* && stylelint src/**/*.sss",
    "test": "yarn lint && yarn build && size-limit",
    "clean": "rimraf dist/ .cache",
    "build": "NODE_ENV=production ./scripts/build",
    "start": "podman build -t loguxio . && podman run -v ./dist/:/var/www/ --privileged --rm -p 8000:80 -e PORT=80 -it loguxio",
    "deploy": "gcloud builds --project logux-255417 submit"
  },
  "dependencies": {
    "capitalize": "^2.0.0",
    "chalk": "^3.0.0",
    "documentation": "^12.1.4",
    "globby": "^10.0.1",
    "lowlight": "^1.13.0",
    "make-dir": "^3.0.0",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.21",
    "postcss-hexrgba": "^2.0.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-mixins": "^6.2.3",
    "postcss-momentum-scrolling": "^1.9.15",
    "postcss-nested": "^4.2.1",
    "postcss-url": "^8.0.0",
    "pug": "^2.0.4",
    "rehype-parse": "^6.0.2",
    "rehype-raw": "^4.0.1",
    "rehype-stringify": "^6.0.1",
    "remark": "^11.0.2",
    "remark-highlight.js": "^5.1.1",
    "remark-html": "^10.0.0",
    "remark-parse": "^7.0.2",
    "remark-rehype": "^5.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.0",
    "rollup-plugin-terser": "^5.1.2",
    "slugify": "^1.3.6",
    "spinnies": "^0.5.0",
    "sugarss": "^2.0.0",
    "unified": "^8.4.2",
    "unist-util-filter": "^2.0.0",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^2.0.1",
    "unzipper": "^0.10.5"
  },
  "devDependencies": {
    "@logux/eslint-config": "^34.0.1",
    "@logux/sharec-config": "^0.5.5",
    "@size-limit/file": "^2.2.1",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^13.0.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "stylelint": "^12.0.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "svgo": "^1.3.2"
  },
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "engines": {
    "node": ">=13.0.0"
  },
  "postcss": {
    "plugins": {
      "postcss-mixins": {
        "mixinsDir": "mixins"
      },
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-momentum-scrolling": {}
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "@logux/eslint-config/node",
    "rules": {
      "node/no-unpublished-require": "off"
    },
    "overrides": [
      {
        "files": "src/**/*.js",
        "rules": {
          "node/no-unsupported-features/es-syntax": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ],
    "rules": {
      "declaration-block-trailing-semicolon": null,
      "block-closing-brace-newline-before": null,
      "block-opening-brace-space-before": null,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "define-mixin",
            "mixin"
          ]
        }
      ],
      "color-named": "never"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.svg": [
      "svgo",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": [
        "dist/uikit/index.html",
        "dist/*.woff",
        "dist/chat.*.svg",
        "dist/edit.*.svg",
        "dist/link.*.svg",
        "dist/lurkers-light.*.svg",
        "dist/*.js",
        "dist/*.css"
      ],
      "limit": "10 KB"
    }
  ],
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.5.3"
  }
}
