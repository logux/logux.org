  h2 Logo
  .asset
    a.asset_file( href="./logo-light.svg" download="logux-logo-light.svg" )
      img( src="./logo-light.svg" height="150" width="150" )
    a.asset_file( href="./logo-dark.svg"  download="logux-logo-dark.svg" )
