{
  "name": "logux.io",
  "private": true,
  "scripts": {
    "start": "parcel serve src/uikit.pug --open",
    "lint": "eslint . && stylelint src/**/*.sss",
    "test": "yarn lint && yarn build && size-limit",
    "clean": "del-cli dist/ .cache",
    "build": "NODE_ENV=production ./scripts/build.js"
  },
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@rollup/plugin-replace": "^2.3.3",
    "autoprefixer": "^9.8.6",
    "capitalize": "^2.0.3",
    "colorette": "^1.2.1",
    "del": "^6.0.0",
    "dotenv": "^8.2.0",
    "globby": "^11.0.1",
    "jstransformer-lowlight": "^0.1.0",
    "lowlight": "^1.15.0",
    "make-dir": "^3.1.0",
    "nanoevents": "^5.1.8",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.32",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^4.0.0",
    "postcss-mixins": "^6.2.3",
    "postcss-momentum-scrolling": "^2.8.20",
    "postcss-nested": "^4.2.3",
    "postcss-url": "^8.0.0",
    "pug": "^3.0.0",
    "recursive-copy": "^2.0.11",
    "rehype-parse": "^7.0.1",
    "rehype-raw": "^4.0.2",
    "rehype-stringify": "^8.0.0",
    "remark": "^12.0.1",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^12.0.0",
    "remark-parse": "^8.0.3",
    "remark-rehype": "^7.0.0",
    "rollup": "^2.28.2",
    "rollup-plugin-inject-process-env": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "slugify": "^1.4.5",
    "spinnies": "^0.5.1",
    "ssdeploy": "^0.6.16",
    "sugarss": "^2.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3",
    "unified": "^9.2.0",
    "unist-util-filter": "^2.0.2",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^2.0.3",
    "unzipper": "^0.10.11"
  },
  "devDependencies": {
    "@logux/eslint-config": "^40.0.5",
    "@logux/sharec-config": "^0.7.4",
    "@logux/stylelint-config": "^0.1.3",
    "@size-limit/file": "^4.6.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.10.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^22.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "size-limit": "^4.6.0",
    "stylelint": "^13.7.2",
    "stylelint-config-recess-order": "^2.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "svgo": "^1.3.2"
  },
  "repository": "logux/logux.io",
  "homepage": "https://logux.io/",
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "postcss": {
    "plugins": {
      "postcss-mixins": {
        "mixinsDir": "mixins"
      },
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-momentum-scrolling": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off"
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": "src/service.js",
        "globals": {
          "FILES": false
        }
      }
    ]
  },
  "eslintIgnore": [
    "scripts/lib/dirs.js",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "path": [
        "dist/uikit/index.html",
        "dist/*.woff",
        "dist/*.svg",
        "dist/*.js",
        "dist/*.css",
        "!dist/service.js",
        "!dist/open.*.svg",
        "!dist/close.*.svg",
        "!dist/chat.*.svg",
        "!dist/pinned.*.svg",
        "!dist/favicon.*.svg",
        "!dist/chain-dark.*.svg",
        "!dist/lurkers-dark.*.svg",
        "!dist/logotype-dark.*.svg"
      ],
      "limit": "17 KB"
    }
  ],
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.4"
  }
}
