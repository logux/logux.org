{
  "name": "logux.io",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start:uikit": "parcel serve src/uikit.pug --open",
    "test": "eslint . && stylelint src/**/*.sss && yarn build && size-limit",
    "clean": "rm -Rf dist/ .parcel-cache/",
    "build": "NODE_ENV=production ./scripts/build.js",
    "start": "serve dist/"
  },
  "dependencies": {
    "@babel/core": "^7.15.8",
    "@parcel/optimizer-cssnano": "2.0.0-beta.2",
    "@parcel/optimizer-htmlnano": "2.0.0-beta.2",
    "@parcel/packager-css": "2.0.0-beta.2",
    "@parcel/packager-html": "2.0.0-beta.2",
    "@parcel/transformer-css": "2.0.0-beta.2",
    "@parcel/transformer-html": "2.0.0-beta.2",
    "@parcel/transformer-postcss": "2.0.0-beta.2",
    "@parcel/transformer-posthtml": "2.0.0-beta.2",
    "@parcel/transformer-pug": "2.0.0-beta.2",
    "@parcel/transformer-sugarss": "2.0.0-beta.2",
    "autoprefixer": "^10.3.7",
    "capitalize": "^2.0.3",
    "del": "^6.0.0",
    "dotenv": "^10.0.0",
    "globby": "^12.0.2",
    "jstransformer-lowlight": "^0.1.0",
    "lowlight": "^2.3.0",
    "make-dir": "^3.1.0",
    "nanoevents": "^6.0.1",
    "parcel": "2.0.0-beta.2",
    "picocolors": "^0.2.1",
    "postcss": "^8.3.9",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^5.0.0",
    "postcss-mixins": "^8.1.0",
    "postcss-momentum-scrolling": "^3.14.22",
    "postcss-nested": "^5.0.6",
    "postcss-url": "^10.1.3",
    "pug": "^3.0.2",
    "recursive-copy": "^2.0.13",
    "rehype-parse": "^8.0.3",
    "rehype-raw": "^6.1.0",
    "rehype-stringify": "^9.0.2",
    "remark": "^14.0.1",
    "remark-highlight.js": "^7.0.1",
    "remark-html": "^14.0.1",
    "remark-parse": "^10.0.0",
    "remark-rehype": "^9.0.0",
    "slugify": "^1.6.1",
    "spinnies": "^0.5.1",
    "ssdeploy": "^0.7.1",
    "sugarss": "^4.0.1",
    "typedoc": "^0.22.4",
    "typescript": "~4.4.3",
    "unified": "^10.1.0",
    "unist-util-filter": "^4.0.0",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^4.1.0",
    "unzipper": "^0.10.11"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.4.8",
    "@logux/sharec-config": "^0.12.2",
    "@logux/stylelint-config": "^0.3.1",
    "@size-limit/file": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "lint-staged": "^11.2.1",
    "prettier": "^2.4.1",
    "serve": "^12.0.1",
    "simple-git-hooks": "^2.6.1",
    "size-limit": "^5.0.5",
    "stylelint": "^13.13.1",
    "svgo": "^2.7.0"
  },
  "repository": "logux/logux.io",
  "homepage": "https://logux.io/",
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-mixins": {
        "mixinsDir": "mixins"
      },
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-momentum-scrolling": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off",
      "no-loop-func": "off"
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": "src/service.js",
        "globals": {
          "FILES": false
        }
      },
      {
        "files": "scripts/**/*.js",
        "rules": {
          "no-console": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "scripts/lib/dirs.js",
    "dist",
    ".parcel-cache"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "path": [
        "dist/uikit/index.html",
        "dist/*.woff",
        "dist/*.svg",
        "dist/*.js",
        "dist/*.css",
        "!dist/service.js",
        "!dist/open.*.svg",
        "!dist/close.*.svg",
        "!dist/chat.*.svg",
        "!dist/pinned.*.svg",
        "!dist/favicon.*.svg",
        "!dist/chain-dark.*.svg",
        "!dist/lurkers-dark.*.svg",
        "!dist/logotype-dark.*.svg"
      ],
      "limit": "17 KB"
    }
  ],
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.12.2"
  }
}
