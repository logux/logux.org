{
  "name": "logux.org",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start:uikit": "vite --open",
    "test:js": "eslint .",
    "test:css": "stylelint src/**/*.sss",
    "test:build": "pnpm build && size-limit",
    "test": "pnpm run /^test:/",
    "clean": "rm -Rf dist/",
    "build": "NODE_ENV=production ./scripts/build.js",
    "start": "serve dist/"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "capitalize": "^2.0.4",
    "del": "^7.1.0",
    "dotenv": "^16.3.1",
    "fast-glob": "^3.3.2",
    "jstransformer-lowlight": "^0.1.0",
    "lowlight": "^3.1.0",
    "make-dir": "^4.0.0",
    "nanoevents": "^9.0.0",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.32",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-hexrgba": "^2.1.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-mixins": "^9.0.4",
    "postcss-momentum-scrolling": "^3.14.22",
    "postcss-nested": "^6.0.1",
    "postcss-url": "^10.1.3",
    "pug": "^3.0.2",
    "recursive-copy": "^2.0.14",
    "rehype-parse": "^9.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.0",
    "remark": "^15.0.1",
    "remark-highlight.js": "^7.0.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "slugify": "^1.6.6",
    "spinnies": "^0.5.1",
    "ssdeploy": "^0.9.3",
    "sugarss": "^4.0.1",
    "typedoc": "0.22.17",
    "typescript": "~4.7.4",
    "unified": "^11.0.4",
    "unist-util-filter": "^5.0.1",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^5.0.0",
    "unzipper": "^0.10.14",
    "vite": "^5.0.12",
    "vite-plugin-pug-transformer": "^1.0.5"
  },
  "devDependencies": {
    "@logux/eslint-config": "^52.0.2",
    "@logux/stylelint-config": "^0.16.0",
    "@size-limit/file": "^11.0.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "nano-staged": "^0.8.0",
    "serve": "^14.2.1",
    "simple-git-hooks": "^2.9.0",
    "size-limit": "^11.0.0",
    "stylelint": "^15.11.0",
    "svgo": "^3.0.5"
  },
  "repository": "logux/logux.org",
  "homepage": "https://logux.org/",
  "license": "MIT",
  "browserslist": [
    "defaults",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-mixins": {
        "mixinsDir": "mixins"
      },
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-momentum-scrolling": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "no-loop-func": "off"
    },
    "overrides": [
      {
        "files": "scripts/**/*.js",
        "rules": {
          "no-console": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "scripts/lib/dirs.js",
    "dist"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config",
    "customSyntax": "sugarss",
    "rules": {
      "function-disallowed-list": null,
      "no-irregular-whitespace": null,
      "color-no-hex": null
    }
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged --config package.json"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "name": "Files to download",
      "path": [
        "dist/uikit/index.html.gz",
        "dist/assets/*.woff2",
        "dist/assets/*.svg.gz",
        "dist/assets/*.js.gz",
        "dist/assets/*.css.gz",
        "!dist/assets/open.*.svg.gz",
        "!dist/assets/close.*.svg.gz",
        "!dist/assets/chat.*.svg.gz",
        "!dist/assets/pinned.*.svg.gz",
        "!dist/assets/favicon.*.svg.gz",
        "!dist/assets/chain-dark.*.svg.gz",
        "!dist/assets/lurkers-dark.*.svg.gz",
        "!dist/assets/logotype-dark.*.svg.gz"
      ],
      "limit": "80 KB"
    },
    {
      "name": "Scripts to execute",
      "path": "dist/assets/*.js",
      "limit": "5 KB"
    }
  ]
}
